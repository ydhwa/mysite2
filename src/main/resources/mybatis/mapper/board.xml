<!-- getByNo

select b.no as no,
	u.name as username,
	title,
	contents,
	date_format(b.reg_date, '%Y-%m-%d %H:%i:%s') as regdate,
	views,
	b.user_no as userno
from board b, user u
where b.user_no = u.no
	and b.no = #{ value };
-->


<!-- getListSize

select count(*)
from board;
